rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /peluquerias/{peluqueriaId} {
      allow read, write: if true;
    }
    
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /reservas/{reservaId} {
      allow read, write: if true;
    }
  }
} 